<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_java_callback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Java callback" />

    <Button
        android:id="@+id/btn_java_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Java result" />

    <Button
        android:id="@+id/btn_kotlin_callback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin callback" />

    <Button
        android:id="@+id/btn_kotlin_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin result" />


</LinearLayout>